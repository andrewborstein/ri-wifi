<h1>Search WiFi spots.</h1>
    <div class="input-group sort-buttons text-center col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 ">
      <%= form_tag spots_path, :method => :get, class: 'input-group' do %>
          <%= text_field_tag :search, params[:search], class: 'form-control' %>
          <span class='input-group-btn'>
            <%= submit_tag "Search Nearby", :name => nil, class: 'btn btn-default' %>
          </span>
      <% end %>
    </div>